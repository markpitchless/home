[user]
	name = Mark Pitchless
	email = markpitchless@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
    ui = true
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[color "diff"]
	plain = white
	meta = magenta
	frag = cyan
    func = yellow
[merge]
    conflictstyle = diff3
[alias]
	co = checkout
	stat = status
	undo-commit = reset --soft HEAD^
	redo-commit = commit -a -c ORIG_HEAD
    logk = log --graph --decorate --pretty=oneline --abbrev-commit
[credential]
	helper = cache
[push]
	default = simple
